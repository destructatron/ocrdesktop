#!/usr/bin/env python3
# -*- coding: utf-8 -*-

"""OCRdesktop - Accessibility tool for using OCR to read inaccessible windows."""

try:
    # Try importing as installed package first
    from ocrdesktop_pkg.app import main
except ImportError:
    # Fall back to relative import for development/direct execution
    import os
    import sys
    sys.path.insert(0, os.path.dirname(os.path.abspath(__file__)))
    from ocrdesktop_pkg.app import main

if __name__ == "__main__":
    main()
